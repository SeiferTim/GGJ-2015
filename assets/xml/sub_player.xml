<?xml version="1.0" encoding="utf-8" ?>
<data>
	<include id="_ui_globals"/>
	
	<group id="back" />
	
	<group id="new_turn" />
	<group id="display" />
	
	<sprite id="back_0" x="0" y="0" width="screen.width" height="screen.height" color="0xffff0000" group="back" >
		<anchor x="center" y="center" x-flush="center" y-flush="center" />
	</sprite>
	<sprite id="back_1" x="0" y="0" width="screen.width" height="screen.height" color="0xffff00ff" group="back" >
		<anchor x="center" y="center" x-flush="center" y-flush="center" />
	</sprite>
	<sprite id="back_2" x="0" y="0" width="screen.width" height="screen.height" color="0xff0000ff" group="back" >
		<anchor x="center" y="center" x-flush="center" y-flush="center" />
	</sprite>
	<sprite id="back_3" x="0" y="0" width="screen.width" height="screen.height" color="0xffffff00" group="back" >
		<anchor x="center" y="center" x-flush="center" y-flush="center" />
	</sprite>
	
	<text id="title_text" x="0" y="20" text="Pass me to Player 1" use_def="screen_text" size="48" align="center" width="screen.width-20" group="new_turn" >
		<anchor x="center" x-flush="center" y="top" y-flush="top" />
	</text>
	
	<button id="button_ready" x="0" y="0" label="Ready?" use_def="game_button" width="200" group="new_turn">
		<anchor x="center" x-flush="center" y="center" y-flush="center" />
		<param type="string" value="button_ready" />
	</button>
	
	<text id="label_hp" x="20" y="20" text="HP:" use_def="screen_text" size="28" align="right" width="68" group="display">
		<anchor x="left" x-flush="left" y="top" y-flush="top" />
	</text> 
	<text id="label_fuel" x="20" y="10" text="Fuel:" use_def="screen_text" size="28" align="right" width="68" group="display">
		<anchor x="left" x-flush="left" y="label_hp.bottom" y-flush="top" />
	</text> 
	 
	<text id="label_credits" x="20" y="10" text="Credits:" use_def="screen_text" size="28" align="right" width="110" group="display">
		<anchor x="left" x-flush="left" y="label_fuel.bottom" y-flush="top" />
	</text>
	
	<text id="value_credits" x="20" y="10" text="00000" use_def="screen_text" size="28" align="left" width="110" group="display">
		<anchor x="label_credits.right" x-flush="left" y="label_fuel.bottom" y-flush="top" />
	</text>
	
	<button_toggle id="button_explore" x="0" y="-20" label="Explore" width="200" use_def="game_button_toggle" group="display">
		<anchor x="center" x-flush="center" y="bottom" y-flush="bottom"/>
		<param type="string" value="button_explore" />
	</button_toggle>
	
	<button_toggle id="button_survey" x="0" y="-20" label="Survey" width="200" use_def="game_button_toggle" group="display">
		<anchor x="center" x-flush="center" y="bottom" y-flush="bottom"/>
		<param type="string" value="button_survey" />
	</button_toggle>
	
	<button_toggle id="button_combat" x="0" y="-20" label="Combat" width="200" use_def="game_button_toggle" group="display">
		<anchor x="center" x-flush="center" y="bottom" y-flush="bottom"/>
		<param type="string" value="button_combat" />
	</button_toggle>
	
	<button id="button_end" x="0" y="-20" label="End Turn" width="200" use_def="game_button" group="display">
		<anchor x="center" x-flush="center" y="bottom" y-flush="bottom"/>
		<param type="string" value="button_end" />
	</button>
	
	<text id="value_turns" x="-20" y="20" label="Turn 1/10" size="36" width="200" align="right" use_def="screen_text" group="display">
		<anchor x="right" x-flush="right" y="top" y-flush="top"/>
	</text>
	
 	<align axis="horizontal" spacing="20" resize="false">
		<bounds left="screen.left+20" right="screen.right-20"/>
		<objects value="button_explore,button_survey,button_combat,button_end"/>
	</align>
	
	<mode id="player_0" is_default="true">
		<show id="back_0" />
		<hide id="back_1,back_2,back_3"/>
		
	</mode>
	<mode id="player_1" is_default="true">
		<show id="back_1" />
		<hide id="back_0,back_2,back_3"/>
		
	</mode>
	<mode id="player_2" is_default="true">
		<show id="back_2" />
		<hide id="back_1,back_0,back_3"/>
		
	</mode>
	<mode id="player_3" is_default="true">
		<show id="back_3" />
		<hide id="back_1,back_2,back_0"/>
		
	</mode>
	
</data>